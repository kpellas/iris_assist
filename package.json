{
  "name": "kelly-assistant",
  "version": "1.0.0",
  "description": "Voice-driven personal automation system with Alexa, memory, and intelligent task management",
  "private": true,
  "scripts": {
    "dev": "npm run dev:backend",
    "dev:backend": "cd backend && npm run dev",
    "dev:ipad": "cd ipad-app && npm run dev",
    "dev:local": "cd local-agent && npm run dev",
    "build": "npm run build:backend && npm run build:ipad",
    "build:backend": "cd backend && npm run build",
    "build:ipad": "cd ipad-app && npm run build",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm test",
    "setup": "npm run setup:backend && npm run setup:ipad && npm run setup:local",
    "setup:backend": "cd backend && npm install",
    "setup:ipad": "cd ipad-app && npm install",
    "setup:local": "cd local-agent && npm install",
    "deploy": "cd backend && npm run deploy"
  },
  "workspaces": [
    "backend",
    "ipad-app",
    "local-agent"
  ],
  "author": "Kelly Pellas",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}